{% extends '@base/default/base.html.twig' %}
{% block tt %} <h2>Forming</h2>{% endblock %}
{% block aa %}Forming sessions{% endblock %}
{% block body %}

    <!-- Events -->
    <div class="events">
        <div class="container">
            <div class="row">
                <div class="col">

                    <!-- Event -->
                    {%  for formations in f %}
                        <div class="event">
                            <div class="row row-lg-eq-height">
                                <div class="col-lg-6 single_portfolio_item design home-design">
                                    <!-- Portfolio Thumbnail -->
                                    <div class="portfolio-thumbnail bg-img" style="background-image: url({{ asset('img/bg-img/1.jpg') }});"></div>
                                    <!-- Portfolio Hover Text -->
                                    <div class="portfolio-hover-overlay">
                                        <a href=" " class="portfolio-img d-flex align-items-center justify-content-center" title="Portfolio 1">
                                            <div class="port-hover-text">
                                                <h3>Event 1 </h3>
                                                <h5>15 May</h5>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 event_col">
                                    <div class="event_content">
                                        <div><br><h5>{{ formations.nom }}</h5></div>
                                        <div class="event_location"> </div>
                                        <div class="event_text">
                                            <p>{{ formations.description }}</p>
                                        </div>
                                        <div class="event_speakers">
                                            <!-- Event Speaker -->
                                            <div class="event_speaker d-flex flex-row align-items-center justify-content-start">
                                                <div><div class="event_speaker_image"><img src="{{ asset('img/core-img/time.png') }}" alt=""></div></div>
                                                <div class="event_speaker_content">
                                                    <div class="event_speaker_name">Start Date : {{ formations.dateDeb|date('Y-m-d') }}</div>
                                                    <div class="event_speaker_title">End Date : {{ formations.dateFin|date('Y-m-d') }}</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="event_buttons">
                                            <button type="submit" class="btn alazea-btn mt-30">Subscribe</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div><br></div>
                    {% endfor %}
                </div>
            </div>
            <div><br></div>
            <div class="row">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                        </ul>
                    </nav>
                    <br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}