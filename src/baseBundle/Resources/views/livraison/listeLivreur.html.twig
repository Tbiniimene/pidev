{% extends '@base/admin/base.html.twig' %}
{% block title %}Admin - Liste des livreurs{% endblock %}
{% block body %}
    <script src="{{ asset('admin/vendor/jquery/jquery.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $("table tbody > tr").each(function()
            {

                let td=($(this).find("td:eq(4)").text());
                if(td.indexOf(" :")!=-1)
                {
                    td=td.slice(0,td.indexOf(" :"));
                    $(this).find("td:eq(4)").text(td);
                }

            })
        });
    </script>
<div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_index') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Liste livreur</li>
            </ol>

            <!-- Page Content -->
            <h1>Liste des livreurs</h1>
            <hr>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Liste des Livreurs
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Etat</th>
                        <th>Téléphone</th>
                        <th>Localisation</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Etat</th>
                        <th>Téléphone</th>
                        <th>Localisation</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for v in livreurs %}
                        <tr>
                            <td>{{ v.nom }}</td>
                            <td>{{ v.prenom }}</td>
                            {% if v.etat=="disponible" %}
                                <td class="text-success"><b>{{ v.etat }}</b></td>

                            {% else %}
                                <td class="text-danger"><b>{{ v.etat }}</b></td>

                            {% endif %}
                            <td>{{ v.tel }}</td>
                            <td>{{ v.localisation }}</td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->
{% endblock %}