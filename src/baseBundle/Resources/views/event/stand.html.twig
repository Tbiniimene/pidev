{% extends '@base/admin/base.html.twig' %}
{% block title %}Admin - Event{% endblock %}
{% block body %}
    <!-- Page Content -->
    <div class="container-fluid">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Stand List
        </div>
        <div class="card-body">
            <div class="table-responsive table-hover">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th> Id </th>
                        <th> Name </th>
                        <th> Mail </th>
                        <th> Description </th>
                        <th> Event Name </th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for e in aa %}
                        <tr>
                            <td> {{ e.idStand }} </td>
                            <td> {{ e.nomStand }} </td>
                            <td> {{ e.mail }} </td>
                            <td> {{ e.description }} </td>
                            <td> {{ e.event }} </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}