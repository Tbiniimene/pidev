{% extends '@base/admin/base.html.twig' %}
{% block title %}Admin - Event{% endblock %}
{% block body %}
    <!-- Page Content -->
    <div class="container-fluid">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Stand List
        </div>
        <div class="card-body">
            <div class="table-responsive table-hover">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th> Stand Id </th>
                        <th> Event Id </th>
                        <th> Stat </th>
                        <th> Description </th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for e in aa %}
                        <tr>
                            <td> {{ e.idStand }} </td>
                            <td> {{ e.idEvent }} </td>
                             {% if (e.statutStand ==0)%}
                            <td class="text-danger">unavailable</td>
                            {% else %}
                            <td class="text-success">available
                            {% endif %}
                            <td> {{ e.description }} </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}