{% extends '@base/admin/base.html.twig' %}
{% block title %}Admin - Event{% endblock %}
{% block body %}
    <!-- Page Content -->
    <div class="container-fluid">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Add Stand
        </div>
        <div class="card-body">
            <div class="table-responsive table-hover">
                <table class="table table-borderless" id="dataTable" width="100%" cellspacing="0">
                    {{ form_start(form) }}
                    <tr>
                        <td>Event Name : </td>
                        <td>{{ form_widget(form.idEvent) }}</td>
                    </tr>
                    <tr>
                        <td>State : </td>
                        <td>{{ form_widget(form.statutStand) }}</td>
                    </tr>
                    <tr>
                        <td>Discription : </td>
                        <td>{{ form_widget(form.description) }}</td>
                    </tr>
                </table>
                <br>
                <center><button class="btn btn-primary" type="submit">Add Stand</button></center>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}