

    {% extends '@base/admin/base.html.twig' %}
    {% block title %}Admin - Forming sessions{% endblock %}
    {% block body %}
        <!-- Page Content -->
        <script type="text/javascript">
            $(function () {
                $('#calendar-holder').fullCalendar({
                    header: {
                        left: 'prev, next, today',
                        center: 'title',
                        right: 'month, basicWeek, basicDay'
                    },
                    lazyFetching: true,
                    navLinks: true,
                    eventSources: [
                        {
                            url: '/fc-load-events',
                            type: 'POST',
                            data: {
                                filters: {}
                            },
                            error: function () {
                                alert('There was an error while fetching FullCalendar!');
                            }
                        }
                    ]
                });
            });
        </script>
        <link rel="stylesheet" href="{{ asset('bundles/fullcalendar/css/fullcalendar/fullcalendar.min.css') }}" />
        <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/moment.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/fullcalendar.min.js') }}"></script>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
               Forming sessions
            </div>
            <div class="card-body">
                <div class="table-responsive table-hover">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>

                            <th> </th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Debut date</th>
                            <th>End date</th>
                            <th>Description</th>
                            <th>addresse</th>
                            <th>image</th>
                            <th>Number of participants</th>
                            <th>Trainer</th>
                            <th>Edit</th>
                            <th>Delete</th>

                        </tr>
                        </thead>



                        <tbody>

                        {%  for formations in f %}

                            <tr>
                                <td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
                                </td>
                                <td> {{ formations.nom }} </td>
                                <td> {{ formations.type }} </td>

                                <td> {{ formations.prix }} </td>
                                <td> {{ formations.dateDeb|date("m/d/Y") }} </td>
                                <td> {{ formations.dateFin|date("m/d/Y") }} </td>
                                <td> {{ formations.description }}</td>
                                <td> {{ formations.addresse }}</td>
                                <td> <img src="{{ asset(formations.img) }}" style="width: 50px;height:50px" /></td>
                                <td> {{ formations.nbmax }}</td>
                                <td> {{ formations.formateur.nom }} </td>

                                <td> <a href="{{ path('modif_formation',{'id':formations.idformation}) }}" class="btn btn-warning"/> Edit </td>

                                <td> <a href="{{ path('supp_formation',{'id':formations.idformation}) }}" class="btn btn-danger"/> Delete </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

{% endblock %}


