{% extends '@base/admin/base.html.twig' %}
{% block title %}Admin - Livreur{% endblock %}
{% block body %}

<div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_index') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Ajouter Livreur</li>
            </ol>

            <!-- Page Content -->
            <h1>Ajouter Livreur</h1>
            <hr>
            {{ form_start(form) }}

            Nom Livreur :  {{ form_widget(form.nom) }} <br/><br/>
            Prenom Livreur :  {{ form_widget(form.prenom) }}<br/><br/>
            Numéro du Téléphone Livreur :  {{ form_widget(form.tel) }}<br/><br/>
            Localisation du Livreur :  {{ form_widget(form.localisation) }}<br/><br/>

            {{ form_widget(form.Ajouter)}}

            {{ form_end(form) }}
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Your Website 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->
{% endblock %}